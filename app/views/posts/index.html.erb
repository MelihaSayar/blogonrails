<div style="margin-top:20px">
<h1>Makaleler</h1>
<% @posts.each do |post| %>
<div style="margin-top:20px">
  <div class="card w-75">
    <div class="card-body">
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
      <%= link_to "Detay", post_path(post), class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>
<% end %>
